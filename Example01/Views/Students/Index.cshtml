@model IEnumerable<Example01.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RollNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Punishment.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeP)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.RollNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Punishment.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CountP)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TimeP)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.RollNumber }) |
        @Html.ActionLink("Details", "Details", new { id = item.RollNumber }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.RollNumber })
    </td>
</tr>
}

</table>
<div id="div1">
    List total count
</div>
@Ajax.ActionLink("View total count","TotalCount","Students",
    new AjaxOptions
    {
        HttpMethod ="GET",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId="div2",
        UpdateTargetId="div1"
    })
